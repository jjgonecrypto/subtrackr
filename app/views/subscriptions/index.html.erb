<h1>Listing subscriptions</h1>

<table>
  <tr>
    <th>Service</th>
    <th>Amount</th>
    <th>Currency</th>
    <th>Frequency</th>
    <th>Offset</th>
    <th>Days before notifiy</th>
    <th>Started</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subscriptions.each do |subscription| %>
  <tr>
    <td><%= subscription.service %></td>
    <td><%= subscription.amount %></td>
    <td><%= subscription.currency %></td>
    <td><%= subscription.frequency %></td>
    <td><%= subscription.offset %></td>
    <td><%= subscription.days_before_notifiy %></td>
    <td><%= subscription.started %></td>
    <td><%= link_to 'Show', subscription %></td>
    <td><%= link_to 'Edit', edit_subscription_path(subscription) %></td>
    <td><%= link_to 'Destroy', subscription, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

